div(id=`${asset}-${fiat}-container` hx-swap-oob='innerHTML')    
    div(class='symbol-table-ask buy')
        each val in pricesSortedByAsk
            div(class=`symbol-table-row ${val.exchangeType.toLowerCase()}`)
                span(class="data")
                    img(src=`${val.logoURL}` class='exchange-logo')
                    span(class="exchange-type")=val.exchangeType
                    span(class="exchange-name")=val.exchangeName
                if val.ask
                    span(class="price")=val.ask.toFixed(2)
                else
                    span(class="price")="Not available"
    div(class='symbol-table-bid sell')
        each val in pricesSortedByBid
            div(class=`symbol-table-row ${val.exchangeType.toLowerCase()}`)
                span(class="data")
                    img(src=`${val.logoURL}` class='exchange-logo')
                    span(class="exchange-type")=exchangeType
                    span(class="exchange-name")=val.exchange
                if val.bid
                    span(class="price")=val.bid.toFixed(2)
                else
                    span(class="price")="Not available"


if includeFees
    input(type='checkbox' name="includeFees" id=`input-include-fees-${asset}-${fiat}` hx-swap-oob='outerHTML' checked=includeFees)
else
    input(type='checkbox' name="includeFees" id=`input-include-fees-${asset}-${fiat}` hx-swap-oob='outerHTML')

input(type='text' name="volume" id=`input-volume-${asset}-${fiat}` hx-swap-oob='outerHTML' value=volume)

div(hx-swap-oob=`beforeend: #form-${asset}-${fiat}`)
    div(hx-ext="class-tools" apply-parent-classes="remove htmx-ws-request")
